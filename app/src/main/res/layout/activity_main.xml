<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/yby_default_logo"
        android:layout_marginBottom="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_Main_Member"/>


    <TextView
        android:id="@+id/txt_Main_Member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원인증"
        android:textColor="@color/blue_bottom"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editTextMemNo"/>

    <EditText
        android:id="@+id/editTextMemNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="회원 번호를 입력하세요"
        android:background="@null"
        android:textCursorDrawable="@color/blue_bottom"
        android:textColor="@color/blue_bottom"
        android:inputType="number"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_MemNo"
        android:backgroundTint="@color/blue_bottom"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/editTextMemNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="버튼"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>